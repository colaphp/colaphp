{
    "name": "phpmall/phpmall",
    "type": "project",
    "description": "一款开源的多商户商城系统",
    "keywords": [
        "e-commerce",
        "phpmall",
        "B2B2C",
        "high performance"
    ],
    "homepage": "https://www.phpmall.net/",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.1",
        "doctrine/migrations": "^3.5",
        "overtrue/easy-sms": "^2.2",
        "overtrue/pinyin": "^4.0",
        "phpmall/framework": "^1.0.14",
        "phpoffice/phpspreadsheet": "^1.23",
        "w7corp/easywechat": "^5.27",
        "yansongda/pay": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
